<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.mnu.mapper.BoardMapper">

    <sql id="criteria">
        <trim prefix="(" suffix=") AND " prefixOverrides="OR">
            <foreach item="type" collection="typeArr">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            title LIKE '%'||#{keyword}||'%'
                        </when>
                        <when test="type == 'C'.toString()">
                            content LIKE '%'||#{keyword}||'%'
                        </when>
                        <when test="type == 'W'.toString()">
                            writer LIKE '%'||#{keyword}||'%'
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>

    <select id="getListWithPaging" resultType="org.mnu.domain.BoardVO">
        <![CDATA[
        SELECT 
            bno, title, content, writer, regdate, updateDate, viewcnt
        FROM 
            (
            SELECT /*+INDEX_DESC(BOARD pk_board) */
                rownum rn, bno, title, content, writer, regdate, updatedate, viewcnt
            FROM 
                BOARD
            WHERE 
        ]]>
            
        <if test="typeArr != null and typeArr.length > 0">
            <include refid="criteria"></include>
        </if>

        <![CDATA[
            rownum <= #{page} * #{perPageNum}
            )
        WHERE rn > (#{page} - 1) * #{perPageNum}
        ]]>
    </select>

    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*) FROM BOARD
        WHERE 
        
        <if test="typeArr != null and typeArr.length > 0">
            <include refid="criteria"></include>
        </if>
        
        bno > 0
    </select>

    <insert id="insert">
        INSERT INTO BOARD (bno, title, content, writer)
        VALUES (seq_board.nextval, #{title}, #{content}, #{writer})
    </insert>

    <insert id="insertSelectKey">
        <selectKey keyProperty="bno" order="BEFORE" resultType="long">
            SELECT seq_board.nextval FROM DUAL
        </selectKey>
        INSERT INTO BOARD (bno, title, content, writer)
        VALUES (#{bno}, #{title}, #{content}, #{writer})
    </insert>

    <select id="read" resultType="org.mnu.domain.BoardVO">
        SELECT 
            bno, title, content, writer, regdate, updatedate, viewcnt
        FROM BOARD
        WHERE bno = #{bno}
    </select>

    <delete id="delete">
        DELETE FROM BOARD WHERE bno = #{bno}
    </delete>

    <update id="update">
        UPDATE BOARD
        SET 
            title = #{title},
            content = #{content},
            updatedate = sysdate
        WHERE bno = #{bno}
    </update>

    <update id="updateViewCnt">
        UPDATE BOARD 
        SET viewcnt = viewcnt + 1 
        WHERE bno = #{bno}
    </update>

</mapper>